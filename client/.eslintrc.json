{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"eqeqeq": "error",
		"no-alert": "warn",
		"no-await-in-loop": "warn",
		"no-compare-neg-zero": "error",
		"no-dupe-args": "error",
		"no-empty": "error",
		"no-empty-function": "error",
		"no-eval": "error",
		"no-magic-numbers": ["warn", { "ignoreArrayIndexes": true }],
		"no-multiple-empty-lines": "error",
		"no-var": "warn",
		"no-undef": "warn",
		"no-unused-vars": "warn",
		"react/prop-types": "off"
	}
}
